{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@env": ["app/config/index.ts"],
      "@controllers": ["app/controller/index.ts"],
      "@models": ["app/model/index.ts"],
      "@services": ["app/service/index.ts"],
      "@middlewares": ["app/middleware/index.ts"],
      "@interface": ["app/interface/index.ts"],
      "@routes": ["app/routes/index.ts"],
    },
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}